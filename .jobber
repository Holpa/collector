version: 1.4

resultSinks:
    - &log
      type: stdout
      data:
          - stdout
          - stderr

jobs:
    CollectHoppers:
        cmd: "/home/jobberuser/hopper-shopper-collector/collect hoppers"
        time: "0 */1 * * * *"
        onError: Continue
        notifyOnSuccess:
            - *log
        notifyOnError:
            - *log
        notifyOnFailure:
            - *log
    CollectMarkets:
        cmd: "/home/jobberuser/hopper-shopper-collector/collect markets"
        time: "0 */5 * * * *"
